
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Character Demo</title>

    <script src="~/Scripts/jquery-2.0.2.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#Button1').click(function () {
                $.ajax({
                    type: 'POST',
                    url: '/Exercise/GetRandomString',
                    dataType: 'html',
                    contentType: 'application/json; charset=utf-8',
                    success: function (data, textStatus) {                        
                        $('#div1').html(data);
                    }
                });
            })
        });
    </script>   
</head>
<body>
    <div>  
        <input id="Button1" type="button" value="Get Random String" /><br />
        <div id="div1" style="font-family:Arial"></div>  
    </div>
</body>
</html>
